<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.homestead.sw803f14.testapp1.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@id/logEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:editable="false"
        android:enabled="true"
        android:layout_above="@id/demoTransferButton"
        android:textAlignment="textStart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getGlobalMessageButtonText"
        android:id="@id/getGlobalMessageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setGlobalMessageButtonText"
        android:id="@id/setGlobalMessageButton"
        android:layout_alignTop="@id/getGlobalMessageButton"
        android:layout_alignEnd="@id/logEditText"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/globalMessageEditText"
        android:layout_above="@id/getGlobalMessageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:focusable="true"
        android:enabled="false"
        android:editable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demoTransferButtonText"
        android:id="@id/demoTransferButton"
        android:layout_above="@id/globalMessageEditText"
        android:layout_alignParentStart="true"
        android:enabled="true" />
</RelativeLayout>
